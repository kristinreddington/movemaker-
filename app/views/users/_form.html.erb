<div class= "form-inline">
<%= form_for @user do |f| %>

<div class="form-control input-sm">
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
</div>


<div class="form-control input-sm">
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
</div>

<div class="form-control input-sm">
  <%= f.label :email %><br>
  <%= f.email_field :email %><br>
</div>

<div class="form-control input-sm">
  <%= f.label :level %><br>
  <%= f.select :level, ['beginner', 'intermediate', 'advanced'], {class: "carousel-control"}%></div>


<div class="checkbox" align="center"><br>
  <strong> Check if you are an admin </strong>
  <%= check_box("user", "admin") %>
</div>


<div class="btn">

  <%= f.submit "Sign Up"%>
</div>
<% end %>
</div>
